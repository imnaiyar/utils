{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "outDir": "dist",
        "rootDir": "./",
        "strict": true, 
        "checkJs": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "sourceRoot": "src",
        "baseUrl": "./",
        "paths": {
          "#root/*": ".",
          "#fonts/*": "./fonts/"
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
} 