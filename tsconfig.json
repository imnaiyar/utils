{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "#lib/*": [
        "./fonts/*"
      ]
    },
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}